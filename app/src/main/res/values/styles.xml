<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>
    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>
</resources>
